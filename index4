  <button class="sidebar-toggle" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
  <div class="sidebar" id="sidebar">
    <h3>ููุฑุณ ุงููุญุชูู</h3>
    <ul>
      <li><a href="#about">ููุงุฐุง ูุญูุ</a></li>
      <li><a href="#stores">ุงููุชุงุฌุฑ</a></li>
      <li><a href="#services">ุงูุฎุฏูุงุช</a></li>
      <li><a href="#features">ุงูููุฒุงุช</a></li>
      <li><a href="#pricing">ุงูุชุณุนูุฑ</a></li>
      <li><a href="#contact">ุงูุงุชุตุงู</a></li>
    </ul>
  </div>

  <script>
    // ูุฑูุณูู ูุญุณู - ุฅุถุงูุฉ pause on hover ูุชุญุณูู ููููุงุชู
    (function(){
      const carousel = document.querySelector('.carousel');
      const slides = Array.from(document.querySelectorAll('.carousel .slide'));
      const dotsWrap = document.getElementById('dots');
      let idx = 0; let timer = null; const pauseMs = 6000;

      function buildDots(){
        slides.forEach((s,i)=>{
          const d = document.createElement('div'); d.className='dot'+(i===0?' active':''); d.dataset.i=i; dotsWrap.appendChild(d);
        })
      }
      function go(i){
        idx = (i + slides.length) % slides.length;
        carousel.style.transform = `translateX(${-idx*100}%)`;
        document.querySelectorAll('.dot').forEach(d=>d.classList.toggle('active', +d.dataset.i===idx));
      }
      function start(){ timer = setInterval(()=>go(idx+1), pauseMs); }
      function stop(){ clearInterval(timer); timer=null; }

      buildDots(); go(0); start();
      document.querySelector('.prev').addEventListener('click', ()=>{ stop(); go(idx-1); setTimeout(start, 1000); });
      document.querySelector('.next').addEventListener('click', ()=>{ stop(); go(idx+1); setTimeout(start, 1000); });
      dotsWrap.addEventListener('click', (e)=>{ if(e.target.classList.contains('dot')){ stop(); go(+e.target.dataset.i); setTimeout(start, 1000); } });

      carousel.addEventListener('mouseenter', stop);
      carousel.addEventListener('mouseleave', start);
      
      // ุชุญุณูู ููููุงุชู: touch swipe (ุงุฎุชูุงุฑูุ ูููู ุฅุถุงูุฉ ููุชุจุฉ ุฅุฐุง ูุฒู)
      let startX = 0;
      carousel.addEventListener('touchstart', (e) => { startX = e.touches[0].clientX; });
      carousel.addEventListener('touchend', (e) => {
        const endX = e.changedTouches[0].clientX;
        if (startX - endX > 50) go(idx + 1);
        if (endX - startX > 50) go(idx - 1);
      });
    })();

    // ุฏุงูุฉ ูุฅุธูุงุฑ/ุฅุฎูุงุก ุงููุงุฆูุฉ ุงูุฌุงูุจูุฉ
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('active');
    }
  </script>
</body>
