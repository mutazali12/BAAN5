    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // ------------------------------------
            // 1. منطق الكاروسيل (Carousel Logic)
            // ------------------------------------
            const carousel = document.getElementById('carousel');
            const slides = document.querySelectorAll('.slide');
            const prevButton = document.querySelector('.prev');
            const nextButton = document.querySelector('.next');
            const dotsContainer = document.getElementById('dots');
            let currentIndex = 0;

            const updateCarousel = () => {
                const offset = -currentIndex * 100;
                carousel.style.transform = `translateX(${offset}%)`;
                
                // تحديث النقاط (Dots)
                document.querySelectorAll('.dot').forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentIndex);
                });
            };

            const createDots = () => {
                slides.forEach((_, index) => {
                    const dot = document.createElement('span');
                    dot.classList.add('dot');
                    if (index === 0) dot.classList.add('active');
                    dot.addEventListener('click', () => {
                        currentIndex = index;
                        updateCarousel();
                    });
                    dotsContainer.appendChild(dot);
                });
            };

            const goToNext = () => {
                currentIndex = (currentIndex + 1) % slides.length;
                updateCarousel();
            };

            const goToPrev = () => {
                currentIndex = (currentIndex - 1 + slides.length) % slides.length;
                updateCarousel();
            };

            // ربط الأزرار
            nextButton.addEventListener('click', goToNext);
            prevButton.addEventListener('click', goToPrev);

            // تشغيل التبديل التلقائي
            let autoSlide = setInterval(goToNext, 5000); // تغيير كل 5 ثوانٍ

            // إيقاف التبديل التلقائي عند التفاعل
            carousel.addEventListener('mouseenter', () => clearInterval(autoSlide));
            carousel.addEventListener('mouseleave', () => autoSlide = setInterval(goToNext, 5000));
            
            createDots();
            updateCarousel(); // لضمان الإعداد الأولي الصحيح

            // ------------------------------------
            // 2. منطق Navbar على الجوال (Mobile Navbar)
            // ------------------------------------
            // تم إخفاء قائمة nav.topnav في CSS على شاشات الجوال،
            // يمكن إضافة زر همبرغر ونافذة منبثقة (pop-up/drawer) هنا إذا لزم الأمر،
            // لكن التصميم الحالي يعتمد على إظهار الـ CTA مباشرة على الجوال.

            // ------------------------------------
            // 3. منع انتقال القفز على الروابط الفارغة (Prevent Empty Link Jumps)
            // ------------------------------------
            document.querySelectorAll('a[href="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                });
            });
        });
    </script>
</body>
