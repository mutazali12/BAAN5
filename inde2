      const dotsWrap = document.getElementById('dots');
      let idx = 0; let timer = null; const pauseMs = 6000;

      function buildDots(){
        slides.forEach((s,i)=>{
          const d = document.createElement('div'); d.className='dot'+(i===0?' active':''); d.dataset.i=i; dotsWrap.appendChild(d);
        })
      }
      function go(i){
        idx = (i + slides.length) % slides.length;
        carousel.style.transform = `translateX(${-idx*100}%)`;
        document.querySelectorAll('.dot').forEach(d=>d.classList.toggle('active', +d.dataset.i===idx));
      }
      function start(){ timer = setInterval(()=>go(idx+1), pauseMs); }
      function stop(){ clearInterval(timer); timer=null; }

      buildDots(); go(0); start();
      document.querySelector('.prev').addEventListener('click', ()=>{ stop(); go(idx-1); setTimeout(start, 1000); });
      document.querySelector('.next').addEventListener('click', ()=>{ stop(); go(idx+1); setTimeout(start, 1000); });
      dotsWrap.addEventListener('click', (e)=>{ if(e.target.classList.contains('dot')){ stop(); go(+e.target.dataset.i); setTimeout(start, 1000); } });

      carousel.addEventListener('mouseenter', stop);
      carousel.addEventListener('mouseleave', start);
    })();
  </script>
</body>
</html>
